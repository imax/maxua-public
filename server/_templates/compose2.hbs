<!-- server/_templates/compose2.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/compose2.css">
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body>
    <main>
        {{> profile-header activePage="compose"}}

        <div class="compose-container" x-data="composeApp()">
            <div class="compose-card">
                <div class="compose-header">
                    <h2 class="compose-title">
                        Compose a new post
                        <button @click="postType = 'text'" :class="{ 'active': postType === 'text' }" class="type-selector">#Text</button>
                        <button @click="postType = 'quote'" :class="{ 'active': postType === 'quote' }" class="type-selector">#Quote</button>
                        <button @click="postType = 'link'" :class="{ 'active': postType === 'link' }" class="type-selector">#Link</button>
                    </h2>
                    <p class="compose-subtitle">Share your thoughts, ideas, or updates</p>
                </div>
                
                <form id="compose-form" @submit.prevent="submitPost('published')">
                    <!-- Main textarea - always visible first -->
                    <textarea x-model="content"
                        class="compose-textarea"
                        :placeholder="getPlaceholder()"
                        x-init="
                            $el.style.height = 'auto'; 
                            $el.style.height = Math.min($el.scrollHeight, 600) + 'px'
                        "
                        @input="
                            $el.style.height = 'auto'; 
                            $el.style.height = Math.min($el.scrollHeight, 600) + 'px'
                        "
                        autofocus></textarea>

                    <!-- Type-specific fields below textarea -->
                    <template x-if="postType === 'quote'">
                        <div class="type-specific-fields">
                            <input type="url" x-model="quoteUrl" 
                                placeholder="Source URL (optional)" 
                                class="url-input">
                        </div>
                    </template>

                    <template x-if="postType === 'link'">
                        <div class="type-specific-fields">
                            <div class="url-row">
                                <input type="url" x-model="linkUrl" 
                                    placeholder="Paste URL here..." 
                                    class="url-input"
                                    required>
                                <button type="button" 
                                    @click="fetchLinkMeta" 
                                    class="fetch-button"
                                    :disabled="!linkUrl">
                                    Fetch
                                </button>
                            </div>
                            
                            <input type="text" x-model="linkTitle" 
                                placeholder="Title" 
                                class="text-input">
                            
                            <textarea x-model="linkDescription" 
                                placeholder="Description" 
                                class="description-textarea"></textarea>
                        </div>
                    </template>

                    <div class="button-row">
                        <div class="button-group-left">
                            <button type="button" @click="submitPost('draft')" :disabled="submitting" class="save-draft-button">
                                <span x-text="submitting === 'draft' ? 'Saving...' : 'Save as Draft'"></span>
                            </button>
                        </div>
                        <div class="button-group-right">
                            <div class="character-count" 
                                 x-show="content.length > 250"
                                 :class="content.length > 300 ? 'over-limit' : ''">
                                <span x-text="content.length"></span> characters
                            </div>
                            <button type="submit" :disabled="submitting" class="post-button">
                                <span x-text="submitting === 'published' ? 'Publishing...' : 'Publish'"></span>
                            </button>
                        </div>
                    </div>
                    
                    <div 
                      x-show="statusMessage !== ''" 
                      x-text="statusMessage" 
                      :class="`status-message status-${statusType}`"
                      x-transition
                      x-cloak>
                    </div>

                    <!-- Sharing options section -->
                    <div class="sharing-options">
                        <h3 class="sharing-title">Sharing options</h3>
                        <div class="toggle-group">
                            <label class="toggle-label">
                                <input type="checkbox" x-model="shareTelegram">
                                <span class="toggle-slider"></span>
                                <span class="toggle-text">Share to Telegram</span>
                            </label>
                            
                            <label class="toggle-label">
                                <input type="checkbox" x-model="shareBluesky">
                                <span class="toggle-slider"></span>
                                <span class="toggle-text">Share to Bluesky</span>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Drafts section -->
                    <div class="drafts-section" x-show="drafts.length > 0">
                        <h3 class="drafts-title">Saved Drafts</h3>
                        <div class="drafts-list">
                          <template x-for="draft in drafts" :key="draft.id">
                              <div class="draft-item" @click="selectDraft(draft)">
                                  <div class="draft-preview" x-text="draft.content.length > 50 ? draft.content.substring(0, 50) + '...' : draft.content"></div>
                                  <div class="draft-date">
                                      <span class="draft-type">#<span x-text="draft.type || 'text'"></span></span> ‚Ä¢ 
                                      <span x-text="new Date(draft.created_at).toLocaleString()"></span>
                                  </div>
                                  <button
                                    @click.stop="deleteDraft(draft.id)"
                                    class="draft-delete">üóëÔ∏è</button>
                              </div>
                          </template>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script src="/js/compose2.js"></script>
</body>
</html>
