<!-- server/_templates/compose2.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/compose2.css">
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body>
    <main>
        {{> profile-header activePage="compose"}}

        <div class="compose-container" x-data="composeApp()">
            <div class="compose-card">
                <div class="compose-header">
                    <h2 class="compose-title">Compose a new post</h2>
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                        <p class="compose-subtitle" style="margin: 0;">Share your thoughts, ideas, or updates</p>
                    </div>
                </div>
                
                <form id="compose-form" @submit.prevent="publishPost">
                    <textarea x-model="content"
                      class="compose-textarea" 
                      placeholder="What's on your mind?"
                      @paste="handlePasteInPost($event)"
                      x-init="
                        $el.style.height = 'auto'; 
                        $el.style.height = Math.min($el.scrollHeight, 600) + 'px'
                      "
                      @input="
                        $el.style.height = 'auto'; 
                        $el.style.height = Math.min($el.scrollHeight, 600) + 'px'
                      "
                      autofocus></textarea>

  <div class="button-row" style="margin-top: 0.5rem;">
      <div class="button-group-left">
          <button type="button" @click="submitPost('draft')" :disabled="submitting" class="save-draft-button">
              <span x-text="submitting === 'draft' ? 'Saving...' : 'Save as Draft'"></span>
          </button>
      </div>
      <div class="button-group-right">
        <div class="character-count" 
             x-show="content.length > 250"
             :class="content.length > 300 ? 'over-limit' : ''">
          <span x-text="content.length"></span> characters
        </div>
          <button type="button" @click="submitPost('published')" :disabled="submitting" class="post-button">
              <span x-text="submitting === 'published' ? 'Publishing...' : 'Publish'"></span>
          </button>
      </div>
  </div>
                
                <div 
                  x-show="statusMessage !== ''" 
                  x-text="statusMessage" 
                  :class="`status-message status-${statusType}`"
                  x-transition
                  x-cloak>
                </div>

                  <!-- Sharing options section - add after button row -->
                <div class="sharing-options">
                    <h3 class="sharing-title">Sharing options</h3>
                    <div class="toggle-group">
                        <label class="toggle-label">
                            <input type="checkbox" x-model="shareTelegram">
                            <span class="toggle-slider"></span>
                            <span class="toggle-text">Share to Telegram</span>
                        </label>
                        
                        <label class="toggle-label">
                            <input type="checkbox" x-model="shareBluesky">
                            <span class="toggle-slider"></span>
                            <span class="toggle-text">Share to Bluesky</span>
                        </label>
                    </div>
                </div>
                </form>

            </div>
        </div>
    </main>

    <script src="/js/compose2.js"></script>
</body>
</html>
