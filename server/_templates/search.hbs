<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{pageTitle}}</title>

  {{{metaTags}}}

  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="preload" href="/css/main.css" as="style">
  <link rel="stylesheet" href="/css/main.css">
  <style>
    .search-header {
      margin-bottom: 1.5rem;
    }
    
    .search-form {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }
    
    .search-input {
      flex: 1;
      padding: 0.6rem 1rem;
      border: 1px solid var(--color-border);
      border-radius: 8px;
      font-family: var(--font-family);
      font-size: 1rem;
    }
    
    .search-input:focus {
      outline: none;
      border-color: var(--color-accent);
      box-shadow: 0 0 0 2px rgba(26, 115, 232, 0.1);
    }
    
    .search-button {
      background-color: var(--color-accent);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      font-size: 0.95rem;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    
    .search-button:hover {
      background-color: var(--color-accent-hover);
    }
    
    .search-results {
      margin-top: 1rem;
    }
    
    .search-count {
      font-size: 0.95rem;
      color: var(--color-secondary-text);
      margin-bottom: 1rem;
      font-style: italic;
    }
    
    .no-results {
      padding: 2rem;
      text-align: center;
      color: var(--color-secondary-text);
      background-color: #f9f9f9;
      border-radius: 8px;
      border: 1px solid var(--color-border);
    }
    
    .no-results-title {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }
    
    .search-suggestions {
      margin-top: 1rem;
      font-size: 0.9rem;
    }
    
    .search-suggestions ul {
      margin-top: 0.5rem;
      padding-left: 1.2rem;
    }
    
    .highlight {
      background-color: rgba(255, 255, 100, 0.3);
      padding: 0 2px;
      border-radius: 2px;
    }
    
    @media (max-width: 640px) {
      .search-form {
        flex-direction: column;
      }
      
      .search-button {
        width: 100%;
      }
    }

  </style>
</head>
<body>
  <main>
    {{> profile-header activePage="search"}}
    
    <div class="search-header">
      <h2>Search</h2>
      <form class="search-form" id="search-form" action="/search" method="GET">
        <input 
          type="search" 
          name="q" 
          id="search-input" 
          class="search-input" 
          placeholder="Search posts..." 
          value="{{query.term}}"
          required
          autocomplete="off"
          autofocus
        >
        <button type="submit" class="search-button">Search</button>
      </form>
    </div>
    
    <!-- Search Results -->
    <div class="search-results-container">
      <!-- Popular Posts Section -->
      {{#unless query.term}}
      <div class="popular-posts-section">
        <h3 class="popular-posts-heading">Most popular this month</h3>
        {{#if popularPosts.length}}
          <div class="popular-posts-list">
            {{#each popularPosts}}
            <div class="popular-post-item">
              <a href="/p/{{this.id}}" class="popular-post-link">
                <span class="popular-post-content">{{this.preview}}</span>
              </a>
            </div>
            {{/each}}
          </div>
        {{else}}
          <p class="no-popular-posts">No popular posts found in the last 30 days.</p>
        {{/if}}
      </div>
      {{/unless}}

      <div class="search-results" id="search-results">
        {{#if query.term}}
          <!-- Show results count -->
          <div class="search-count">
            {{#if pagination.total}}
              Found {{pagination.total}} result{{#if (neq pagination.total 1)}}s{{/if}} for "{{query.term}}"
            {{else}}
              No results found for "{{query.term}}"
            {{/if}}
          </div>
        
          {{#if posts.length}}
            <!-- Display found posts -->
            {{#each posts}}
            <div class="post-card" data-post-id="{{this.id}}">
              <div class="post-content">{{{this.highlighted_content}}}</div>
              <div class="post-meta">
                <div class="post-date">
                  <a href="/p/{{this.id}}" class="permalink-date">{{this.formatted_date}}</a>
                </div>
              </div>
            </div>
            {{/each}}
            
            <!-- Pagination -->
            {{#if pagination.hasMore}}
            <a href="/search?q={{query.term}}&offset={{add pagination.offset pagination.limit}}" class="load-more" id="load-more">Load more results</a>
            {{/if}}
          {{else}}
            <!-- No results found -->
            <div class="no-results">
              <div class="no-results-title">No results found</div>
              <p>Sorry, no posts match your search query.</p>
              
              <div class="search-suggestions">
                <p>Try:</p>
                <ul>
                  <li>Using more general keywords</li>
                  <li>Checking your spelling</li>
                </ul>
              </div>
            </div>
          {{/if}}
        {{else}}
        {{/if}}
      </div>
    </div>
  </main>
  
  {{> footer}}

  <script type="module" src="/js/app.js"></script>
  
</body>
</html>
