<div class="article-container" data-post-id="{{id}}">
  {{#if metadata.title}}
    <h2 class="article-title">{{metadata.title}}</h2>
  {{/if}}
  
  <div class="article-meta">
    Published on <span class="article-date">{{formatted_date}}</span>
    {{#if singlePostPage}}
      <span x-data="{ isAdmin: false }" x-init="isAdmin = localStorage.getItem('microblog_auth') !== null">
        <a x-show="isAdmin" href="/article?edit={{id}}" class="edit-link">Edit</a>
      </span>
    {{/if}}
  </div>
  
  {{#if metadata.image_url}}
    <div class="article-featured-image">
      <img src="{{metadata.image_url}}" alt="{{metadata.title}}">
    </div>
  {{/if}}
  
  <div class="article-content">
    {{{markdownToHtml content}}}
  </div>
</div>
